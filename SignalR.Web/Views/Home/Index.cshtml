@{
    ViewData["Title"] = "Home Page";
}

@* Layoutta bulunan script sectionumuzu burada çağırdık tüm sayfada signalr kullanmak için *@
@section Scripts {
    <script src="~/js/signalr-client.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div id="connectionId" class="alert alert-primary" role="alert"> </div>

            <button type="button" class="btn btn-danger  mx-1 my-1 disabled">
                Connected Client Count <span id="span-connected-client-count" class="badge text-bg-secondary">4</span>
            </button>
            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-all-client">Tüm client'lara gönder</button>
            <button class="btn btn-secondary mx-1 my-1" id="btn-send-message-caller-client">İstek yapan client'a gönder</button>
            <button class="btn btn-success mx-1 my-1" id="btn-send-message-others-client">Diğer client'lara gönder</button>
            <div>
                <hr />

                <input type="text" class="form-control mx-1 my-1" id="text-connectionId" placeholder="connection Id">
                <button class="btn btn-success mx-1 my-1" id="btn-send-message-individual-client">Spesifik client'a gönder</button>
            </div>

        </div>

    </div>


</div>